<Window x:Class="VK.ITMO.WPF.L20.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VK.ITMO.WPF.L20"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        TextBoxBase.TextChanged="Window_TextChanged">
    <Grid TextBoxBase.TextChanged="Grid_TextChanged">
        <TextBox HorizontalAlignment="Left" Height="23" Margin="80,45,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.512,0.949" TextChanged="TextBox_TextChanged"/>
        <RadioButton Name="rbTextEvent" Content="Textbox Event" HorizontalAlignment="Left" Margin="80,80,0,0" VerticalAlignment="Top"/>
        <RadioButton Name="rbGridEvent" Content="Grid Event" HorizontalAlignment="Left" Margin="80,105,0,0" VerticalAlignment="Top"/>
        <RadioButton Name="rbWindowEvent"  Content="Window Event" HorizontalAlignment="Left" Margin="80,130,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
